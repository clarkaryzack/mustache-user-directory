<body>
	<div class="container mt-4">
		<div class="row">
			{{#users}}
				<div class="col-3">
					<div class="profile-card card mb-3">
						<img class="card-img-top" src="{{avatar}}" alt="Picture of {{name}}">
						<div class="card-block">
							<h4 class="card-title">
								<a href="/{{ username }}">
								{{name}}
								</a>
							</h4>
							{{#job}}
							<p class="card-text text-muted">
								{{ job }}, {{ company }}
							</p>
							{{/job}}
							{{^job}}
								<p class="card-text text-danger">Available for hire</p>
							{{/job}}
						</div>
					</div>
				</div>
			{{/users}}
		</div>
	</div>

	{{> tail}}
</body>
